<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFAFA"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageButton
                    android:id="@+id/menu_icon"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:adjustViewBounds="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Mô tả cho hình ảnh"
                    android:scaleType="fitCenter"
                    android:src="@drawable/images"
                    android:textColor="#1E1D1D" />

                <Button
                    android:id="@+id/menu_de_xuat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Đề xuất"
                    android:textColor="#1E1D1D" />

                <Button
                    android:id="@+id/menu_noi_bat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Nổi bật"
                    android:textColor="#1E1D1D"/>

                <Button
                    android:id="@+id/menu_moi_nhat"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Mới nhất"
                    android:textColor="#1E1D1D" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:drawableRight="@drawable/ic_search"
                    android:hint="Tìm kiếm truyện..."
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp"
                    android:textColor="#000000" />


                    <ListView
                        android:id="@+id/listviewNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CEE7ED"></ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F0EE"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/menu_trang_chu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_home"
                    android:text="Trang chủ"
                    android:textColor="#131212"/>

                <Button
                    android:id="@+id/menu_phan_loai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_phanloai"
                    android:text="Phân loại"
                    android:textColor="#131212" />

                <Button
                    android:id="@+id/menu_tu_sach"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_tusach"
                    android:text="Tủ sách"
                    android:textColor="#131212" />

                <Button
                    android:id="@+id/menu_toi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_toi"
                    android:text="Tôi"
                    android:textColor="#131212" />
            </LinearLayout>
        </LinearLayout>



</LinearLayout>