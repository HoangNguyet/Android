<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imageDescriptionStory"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <Button
        android:onClick="ChangeImageDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tải ảnh bìa tác phẩm lên"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/writeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Viết mô tả tác phẩm(Không quá 100 chữ)"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="UpStory"
        android:text="Đăng truyện"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"

        />
</LinearLayout>