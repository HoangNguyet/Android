<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainYourBook">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFAFA"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:text="Tủ sách của tôi"
                    android:textColor="#273791"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:drawableLeft="@drawable/ic_pen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:text="Sách đã viết"
                    android:textColor="#171616"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                    <ListView
                        android:id="@+id/listviewNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#CEE7ED"></ListView>


            </LinearLayout>
        </LinearLayout>
</LinearLayout>