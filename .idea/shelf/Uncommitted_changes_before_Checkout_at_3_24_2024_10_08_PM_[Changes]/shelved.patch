+                            " SET " + database.COLUMN_USERS_PASSWORD + " = '" + mk1 +
+                            "' WHERE " + database.COLUMN_USERS_NAME + " = '" + username + "' AND " +
+                            database.COLUMN_USERS_PASSWORD + " = '" + mkcu + "'";
